<div class="options-route">
	<div class="tabs">
		<ul>
			{{#link-to "options.language" tagName="li" activeClass="is-active"}}
				<a>
					<span class="icon is-small"><i class="fa fa-language"></i></span>
					<span>{{t "section.options.headers.language"}}</span>
				</a>
			{{/link-to}}
			{{#link-to "options.storage-items" tagName="li" activeClass="is-active"}}
				<a>
					<span class="icon is-small"><i class="fa fa-database"></i></span>
					<span>{{t "section.options.headers.storage_items"}}</span>
				</a>
			{{/link-to}}
			{{!--
			{{#link-to "options.misc" tagName="li" activeClass="is-active"}}
				<a>
					<span class="icon is-small"><i class="fa fa-cog"></i></span>
					<span>{{t "section.options.headers.misc"}}</span>
				</a>
			{{/link-to}}
			--}}
		</ul>
	</div>
	{{outlet}}
</div>
